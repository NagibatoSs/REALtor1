	.popup-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%; 
    height: 100%;
    display: none;
	}
	.popup {
    position: absolute;
    background: #ffffff;
	left: 50%;
	top: 50%;
    transform: translate(-50%, -50%);
    padding: 30px;
    padding-top: 30px;
	border: 2px solid #000000;
	}
	.open-popup {
	position: absolute;
    top: 110px;
    left: 45px;
	height: 35px;
	width: 200px;
	font-size: 25px;
	text-align: center;
    cursor: pointer;
	}
	.popup form {
	font-size: 20px;
    display: flex;
    flex-direction: column;
	flex-basis: 0;
	flex-grow: 1;
	width: 600px;
	height: 500px;
	}
	.popup form input {
    margin-bottom: 0;
	margin-left: 3px;
	margin-right: 8px;
    height: 20px;
    font-size: 15px;
    border: 2px solid #000000;
	}
	.popup form input[type="submit"] {
	height: 30px;
	width: 200px;
    background: #15cf3d;
    color: black;
    font-size: 20px;
	left: 80px;
	margin: 20px;
	cursor: pointer;
	}
	.popup form input[type="checkbox"] {
	transform: scale(1.5);
	height: 20px;
	margin: 0;
	margin-left: 5px;
	margin-right: 25px;
	}
	.close-popup {
    position: absolute;
    top: 10px;
    right: 10px;
    cursor: pointer;
	}

	.no-scroll {
    overflow-y: hidden;
	}

