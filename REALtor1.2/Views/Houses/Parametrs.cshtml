@model House
<div class="popup-bg">
    <div class="popup">
        <button class="close-popup">X</button>
        <h1 id="paramsHeading">Параметры</h1>
        <form action="/Houses/Parameters">
            <p class="paramsText">Площадь недвижимости:</p>
            <p class="paramsText">от<input asp-for="Square" type="number" required autofocus>до<input asp-for="Square" type="number" required></p>
            <p class="paramsText">Количество комнат:</p>
            <p class="paramsText">
                студия<input asp-action="CountOfRooms=0" name="rooms" type="radio">
                1<input asp-action="CountOfRooms=1" name="rooms" type="radio">
                2<input asp-action="CountOfRooms=2" name="rooms" type="radio">
                3<input asp-action="CountOfRooms=3" name="rooms" type="radio">
                4<input asp-action="CountOfRooms=4" name="rooms" type="radio">
                >4<input asp-action="CountOfRooms=5" name="rooms" type="radio">
            </p>
            <br>
            <p class="paramsText">Цена:</p>
            <p class="paramsText">от<input asp-for="Price" type="number" step="1000" required>до<input asp-for="Price" type="number" step="1000" required>рублей</p>
            <p class="paramsText">Район:</p>
            <p class="paramsText">Индустриальный<input asp-action="Area=Индустриальный" name="area" type="radio">Ленинский<input asp-action="Area=Ленинский" name="area" type="radio">Октябрьский<input asp-action="Area=Октябрьский" name="area" type="radio"></p>
            <p class="paramsText">Устиновский<input asp-action="Area=Устиновский" name="area" type="radio">Первомайский<input asp-action="Area=Первомайский" name="area" type="radio"></p>
            <p class="paramsText">Вид недвижимости:</p>
            <p class="paramsText">Гараж<input asp-action="StatusOfHome=Гараж" name="property" type="radio">Новостройка<input asp-action="StatusOfHome=Новостройка" name="property" type="radio">Старый ветхий дом<input asp-action="StatusOfHome=Старый ветхий дом" name="property" type="radio"></p>
            <p class="paramsText">Частный дом<input asp-action="StatusOfHome=Частный дом" name="property" type="radio">Старый многоэтажный дом<input asp-action="StatusOfHome=Старый многоэтажный дом" name="property" type="radio"></p>
            <p class="paramsText">Условия жизни:</p>
            <p class="paramsText">Холодная вода<input asp-for="coldWater" value ="true" type="checkbox" ><input asp-for="hotWater" value="true" type="radio">Электричество<input asp-action="electricity=true" type="radio"></p>
            <p class="paramsText">Газ<input asp-action="gas=true" type="radio"></p>
            <input type="submit" value="ГОТОВО">
        </form>
    </div>
</div>
<script src="jquery.min.js"></script>
<script src="script.js"></script>
